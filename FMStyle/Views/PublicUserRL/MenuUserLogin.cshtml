else {
    <li class="top-menu-right-item"><a class="link-menutop-right" href="javascript: void(0)" title="Hi!"><span id="lbTen">Chào khách</span></a></li>
    <li class="top-menu-right-item"><a class="link-menutop-right" href="/dang-nhap.html" title="Đăng nhập"><span id="lbDangNhap">Đăng nhập</span></a></li>
}