@{
    Layout = "~/Views/Shared/PublicTemplate.cshtml";
}

<fieldset style="margin: 70px auto; border-radius: 7px; border: 1px solid #01c4c4; width: 500px">
    <legend style="color: #01c4c4; font-weight: bold; margin-left: 15px">Đăng ký tài khoản người dùng !</legend>

    <form action="" method="post" onsubmit="return checkPassword();">
        <table style="margin: 20px auto; height: 152px;">
            <tbody>
                <tr>
                    <td style="width: 160px">Mật khẩu cũ (<span style="color: red">*</span>):</td>
                    <td>
                        <input type="password" name="txtPasswordOld" id="txtPasswordOld" class="cinput" maxlength="100" height="29" width="200" required />
                    </td>
                </tr>
                <tr>
                    <td style="width: 160px">Mật khẩu mới (<span style="color: red">*</span>):</td>
                    <td>
                        <input type="password" name="txtPasswordNew1" id="txtPasswordNew1" class="cinput" maxlength="100" height="29" width="200" required />

                    </td>
                </tr>
                <tr>
                    <td style="width: 160px">Nhập lại mật khẩu mới (<span style="color: red">*</span>):</td>
                    <td>
                        <input type="password" name="txtPasswordNew2" id="txtPasswordNew2" class="cinput" maxlength="100" height="29" width="200" required />
                    </td>
                </tr>
                <tr>
                    <td style="width: 160px"></td>
                    <td id="messenger">
                        @Html.Raw(ViewBag.error) 
                    </td>
                </tr>
                <tr>
                    <td style="width: 160px"></td>
                    <td>
                        <input type="submit" name="btnDoiMK" value="Đổi mật khẩu" class="cinputb" style="width: 130px;" />
                    </td>
                </tr>

            </tbody>
        </table>
    </form>
</fieldset>
<script>
    // check passord1 equal password2
    function checkPassword() {
        var pass = $("#txtPasswordNew1").val();
        var pass2 = $("#txtPasswordNew2").val();

        if (pass == pass2) {
            return true;
        }
        else {
            $("#messenger").html("<p style = \"font-weight:bold; color:red\">Mật khẩu mới không chính xác!</p>");
            $("#txtPasswordNew1").val("");
            $("#txtPasswordNew1").focus();
            $("#txtPasswordNew2").val("");
            return false;
        }
    }

</script>