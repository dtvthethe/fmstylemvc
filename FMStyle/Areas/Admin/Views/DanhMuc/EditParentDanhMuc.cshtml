@using FMStyle.Areas.Admin.Models;
@model danhmuc
@{
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="space"></div>
@Html.Raw(ViewBag.error)

<div class="col w10 last">
    <div class="content">
        <div class="box header">
            <div class="head"><div></div></div>
            <h2>Thông tin danh mục</h2>
            <div class="desc">
                <form action="" method="post">
                    <table>

                        <tr>
                            <td style="width: 139px">Tên danh mục cha:</td>
                            <td>
                                <input type="text" id="txtTen" name="txtTen" class="text w_20" maxlength="100" width="200" required value="@Model.ten_danhmuc" />
                                <input type="hidden" name="hdId" value="@Model.id_danhmuc" />
                            </td>
                        </tr>
                        <tr>
                            <td style="width: 139px"></td>
                            <td>
                                <input type="submit" name="btnAdd" value="Lưu lại" class="btn"/>
                            </td>
                        </tr>
                    </table>
                </form>
            </div>
            <div class="bottom"><div></div></div>
        </div>
    </div>
</div>
