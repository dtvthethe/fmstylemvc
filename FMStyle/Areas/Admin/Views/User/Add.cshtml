@using FMStyle.Areas.Admin.Models;
@model List<role>
@{
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
<div class="space"></div>
@Html.Raw(ViewBag.error)

<div class="col w10 last">
    <div class="content">
        <div class="box header">
            <div class="head"><div></div></div>
            <h2>Thêm người dùng</h2>
            <div class="desc">
                <form action="" method="post">
                    <table>

                        <tr>
                            <td style="width: 141px">Tên đăng nhập:</td>
                            <td>
                                <input type="text" name="txtTK" value="" class="text w_20" maxlength="30" required>
                            </td>
                        </tr>
                        <tr>
                            <td style="width: 141px">Mật khẩu:</td>
                            <td>
                                <input type="password" name="txtMK1" value="" class="text w_20" maxlength="100" required>
                            </td>
                        </tr>
                        <tr>
                            <td style="width: 141px">Nhập lại mật khẩu:</td>
                            <td>
                                <input type="password" name="txtMK2" value="" class="text w_20" maxlength="100" required>
                            </td>
                        </tr>
                        <tr>
                            <td style="width: 141px">Họ và Tên:</td>
                            <td>
                                <input type="text" name="txtHoTen" value="" class="text w_20" maxlength="100" required>

                            </td>
                        </tr>
                        <tr>
                            <td style="width: 141px">Số điện thoại:</td>
                            <td>
                                <input type="text" name="txtSDT" value="" class="text w_20" maxlength="11">
                            </td>
                        </tr>
                        <tr>
                            <td style="width: 141px">Địa chỉ:</td>
                            <td>
                                <textarea name="txtDiaChi" rows="5" cols="50"></textarea>
                            </td>
                        </tr>
                        <tr>
                            <td style="width: 141px">Email:</td>
                            <td>
                                <input type="email" name="txtEmail" value="" class="text w_20" maxlength="100">

                            </td>
                        </tr>
                        <tr>
                            <td style="width: 141px">Role:</td>
                            <td>
                                <select name="cmbRole" class="cmb">
                                    @foreach (var item in Model)
                                    {
                                        <option value="@item.id_role">@item.role1</option>
                                    }
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td style="width: 141px"></td>
                            <td>
                                <input type="submit" name="btnAdd" class="btn" value="Thêm người dùng" />
                            </td>
                        </tr>
                    </table>
                </form>

            </div>
            <div class="bottom"><div></div></div>
        </div>
    </div>
</div>
