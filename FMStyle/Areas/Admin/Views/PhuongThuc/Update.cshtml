@using FMStyle.Areas.Admin.Models;
@model phuong_thuc_thanh_toan
@{
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
<div class="space"></div>
@Html.Raw(ViewBag.error)

<div class="col w10 last">
    <div class="content">
        <div class="box header">
            <div class="head"><div></div></div>
            <h2>Thông tin phương thức thanh toán</h2>
            <div class="desc">
<form action="" method="post">
    <table>
        <tr>
            <td>Tên phương thức:</td>
            <td>
                <input id="txtTen" class="text w_20" name="txtTen" maxlength="100" type="text" width="200" required value="@Model.ten_phuongthuc" />
                <input type="hidden" name="hdId" value="@Model.id_pt" />
            </td>
        </tr>
        <tr>
            <td>Chi tiết:</td>
            <td>
                <textarea id="ckeditor" class="ckeditor" name="txtChiTiet">@Model.chitiet</textarea>
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" class="btn" name="btnSave" value="Lưu lại" />
            </td>
        </tr>
    </table>
</form>
            </div>
            <div class="bottom"><div></div></div>
        </div>
    </div>
</div>
<script src="~/Scripts/ckeditor/ckeditor.js"></script>